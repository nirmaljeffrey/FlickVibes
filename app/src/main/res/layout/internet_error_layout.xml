<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <ImageView
    android:id="@+id/internet_error_image_view"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:adjustViewBounds="true"
    android:contentDescription="@string/empty_layout_image_info"
    android:scaleType="centerCrop"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.35000002"
    android:src="@drawable/ic_internet_error"/>
  <TextView
    android:id="@+id/internet_error_layout_text_view"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:textColor="@color/colorPrimaryText"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="@+id/internet_error_image_view"
    app:layout_constraintStart_toStartOf="@+id/internet_error_image_view"
    app:layout_constraintTop_toBottomOf="@+id/internet_error_image_view"
    android:text="@string/fragment_internet_error"/>
  <Button
    android:id="@+id/internet_retry_button"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:padding="4dp"
    android:background="@color/colorAccent"
    android:text="@string/fragment_internet_retry_button"
    android:textColor="@android:color/white"
    android:textSize="@dimen/size_16sp"
    app:layout_constraintEnd_toEndOf="@+id/internet_error_image_view"
    app:layout_constraintStart_toStartOf="@+id/internet_error_image_view"
    app:layout_constraintTop_toBottomOf="@+id/internet_error_layout_text_view"/>

</androidx.constraintlayout.widget.ConstraintLayout>