<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:tools="http://schemas.android.com/tools">
  <ImageView
    android:id="@+id/empty_layout_image_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:adjustViewBounds="true"
    android:scaleType="centerCrop"
    android:contentDescription="@string/empty_layout_image_info"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.35000002"
    tools:src="@drawable/ic_no_results_found"/>
  <TextView
    android:id="@+id/empty_layout_text_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:textSize="16sp"
    android:layout_margin="16dp"
    app:layout_constraintEnd_toEndOf="@+id/empty_layout_image_view"
    app:layout_constraintStart_toStartOf="@+id/empty_layout_image_view"
    app:layout_constraintTop_toBottomOf="@+id/empty_layout_image_view"
    tools:text="No movies found"/>

</androidx.constraintlayout.widget.ConstraintLayout>